<div class="row mx-md-n5">
  <div class="col px-md-5">
    <div class="row">
      <div class="col-sm-offset-3">
        <h1>Members</h1>
        <%= link_to 'New Member', new_member_path %>
        <%= link_to 'LeaderBoard Screen', leader_board_members_path %>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Mobile Number</th>
          <th>Date of Joining</th>
          <th>No of Win</th>
          <th>No of Loss</th>
          <th>Avg Score</th>
          <th>Highest Score</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @members.each do |member| %>
          <tr>
            <% count_winning_games = member.winning_games.count %>
            <% total_games_played = member.games_played.count %>
            <% count_loss_games = total_games_played - count_winning_games %>
            <td><%= member.first_name %></td>
            <td><%= member.last_name %></td>
            <td><%= member.mobile_number %></td>
            <td><%= member.joining_date.strftime("%d-%m-%Y") %></td>
            <td><%= count_winning_games %></td>
            <td><%= count_loss_games %></td>
            <td><%= member.avg_score %></td>
            <td><%= member.total_and_highest_scores[1] %></td>
            <td><%= link_to 'Edit', edit_member_path(member) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


