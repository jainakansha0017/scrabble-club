<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :first_name, "First Name*", class: "font-weight-bold mr-2 col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :first_name, placeholder: "Enter first name", required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :last_name, "Last Name*", class: "font-weight-bold mr-2 col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :last_name, placeholder: "Enter last name", required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :mobile_number, "Mobile Number*", class: "font-weight-bold mr-2 col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :mobile_number, placeholder: "Enter Mobile Number", required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :joining_date, "Joining Date*", class: "font-weight-bold mr-2 col-sm-2" %>
    <div class="col-sm-10">
      <%= form.date_field :joining_date, placeholder: "Provide joining Date", required: true, class: "form-control datepicker" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
